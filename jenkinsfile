

pipeline{
agent any
triggers { pollSCM('H/2 * * * *) }
stages{
 stage('program'){
 steps{
  echo 'hello world'
 }
 }
 stage('results execution'){
 steps{
    junit testResults: '**/surefire-reports/TEST-*.xml',
    allowEmptyResults: true
 }
 }
}
post{
always {
            echo 'I will always say Hello again!'
        }
}
}